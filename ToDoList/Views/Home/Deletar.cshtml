@model ToDoList.ViewModel.ToDoViewModel

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>

<h3>Deseja deletar esse item?</h3>
<div>
    <h4>Lista de Tarefas</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Completado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Completado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prazo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prazo)
        </dd>
    </dl>
    
    <form asp-action="Deletar">
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
